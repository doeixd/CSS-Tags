---
// Edit this page link and other page metadata
interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;
// Try .md first, but could be .mdx for the index page
const githubEditUrl = `https://github.com/doeixd/CSS-Tags/edit/main/website/src/content/docs/${currentPath || 'index'}.${currentPath ? 'md' : 'mdx'}`;
---

<div class="page-meta">
	<a href={githubEditUrl} target="_blank" rel="noopener" class="edit-link">
		<svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
			<path d="M11.013 1.427a1.75 1.75 0 012.474 0l1.086 1.086a1.75 1.75 0 010 2.474l-8.61 8.61c-.21.21-.47.364-.756.445l-3.251.93a.75.75 0 01-.927-.928l.929-3.25a1.75 1.75 0 01.445-.758l8.61-8.61zm1.414 1.06a.25.25 0 00-.354 0L10.811 3.75l1.439 1.44 1.263-1.263a.25.25 0 000-.354l-1.086-1.086zM11.189 6.25L9.75 4.81l-6.286 6.287a.25.25 0 00-.064.108l-.558 1.953 1.953-.558a.249.249 0 00.108-.064l6.286-6.286z"></path>
		</svg>
		Edit this page
	</a>
</div>

<style>
	.page-meta {
		display: flex;
		justify-content: flex-end;
		padding-top: 2rem;
		margin-top: 3rem;
		border-top: 1px solid var(--border-color, #e1e4e8);
	}

	.edit-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		color: var(--text-secondary, #6a737d);
		text-decoration: none;
		border-radius: 6px;
		font-size: 0.875rem;
		transition: all 0.15s ease;
	}

	.edit-link:hover {
		background: var(--bg-hover, #e8eaed);
		color: var(--accent, #0066cc);
	}

	@media (prefers-color-scheme: dark) {
		.page-meta {
			border-top-color: var(--border-color, #333);
		}

		.edit-link {
			color: var(--text-secondary, #8b949e);
		}

		.edit-link:hover {
			background: var(--bg-hover, #2d2d2d);
			color: var(--accent-light, #58a6ff);
		}
	}
</style>
