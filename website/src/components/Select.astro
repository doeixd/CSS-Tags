---
// Select.astro - Custom styled select dropdown
interface SelectOption {
  value: string;
  label: string;
  disabled?: boolean;
}

interface Props {
  options: SelectOption[];
  value?: string;
  placeholder?: string;
  disabled?: boolean;
  required?: boolean;
  error?: boolean;
  success?: boolean;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  label?: string;
  helpText?: string;
  errorText?: string;
}

const {
  options,
  value,
  placeholder = 'Select an option',
  disabled = false,
  required = false,
  error = false,
  success = false,
  size = 'md',
  class: className,
  label,
  helpText,
  errorText,
  ...rest
} = Astro.props;
---

<div class={`form-field ${className || ''}`}>
  {label && (
    <label class="form-label" for={rest.id}>
      {label}
      {required && <span class="form-required" aria-label="required">*</span>}
    </label>
  )}

  <div class="select-wrapper">
    <select
      class={`form-select form-select--${size} ${error ? 'form-select--error' : ''} ${success ? 'form-select--success' : ''}`}
      value={value}
      disabled={disabled}
      required={required}
      aria-invalid={error}
      aria-describedby={helpText ? `${rest.id}-help` : errorText ? `${rest.id}-error` : undefined}
      {...rest}
    >
      {placeholder && (
        <option value="" disabled selected={!value}>
          {placeholder}
        </option>
      )}
      {options.map((option) => (
        <option
          value={option.value}
          disabled={option.disabled}
          selected={value === option.value}
        >
          {option.label}
        </option>
      ))}
    </select>

    <div class="select-arrow" aria-hidden="true">
      <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
        <path d="M3 4.5l3 3 3-3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>

  {helpText && (
    <div class="form-help" id={`${rest.id}-help`}>
      {helpText}
    </div>
  )}

  {errorText && (
    <div class="form-error" id={`${rest.id}-error`} role="alert">
      {errorText}
    </div>
  )}
</div>

<style>
  .form-field {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .form-label {
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    font-size: var(--form-label-font-size, var(--font-size-sm));
  }

  .form-required {
    color: var(--form-required-color, #dc3545);
    margin-left: var(--space-xs);
  }

  .select-wrapper {
    position: relative;
  }

  .form-select {
    appearance: none;
    width: 100%;
    padding: var(--form-select-padding, var(--space-sm) calc(var(--space-md) + 24px) var(--space-sm) var(--space-md));
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-md);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: var(--form-select-font-size, var(--font-size-base));
    font-family: inherit;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .form-select:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
  }

  .form-select--error {
    border-color: var(--form-error-color, #dc3545);
  }

  .form-select--error:focus {
    box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
  }

  .form-select--success {
    border-color: var(--form-success-color, #28a745);
  }

  .form-select--success:focus {
    box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
  }

  .form-select:disabled {
    background: var(--bg-secondary);
    color: var(--text-secondary);
    cursor: not-allowed;
  }

  .form-select option {
    background: var(--bg-primary);
    color: var(--text-primary);
    padding: var(--space-sm);
  }

  /* Size variants */
  .form-select--sm {
    padding: var(--space-xs) calc(var(--space-sm) + 24px) var(--space-xs) var(--space-sm);
    font-size: var(--font-size-sm);
  }

  .form-select--lg {
    padding: var(--space-md) calc(var(--space-lg) + 24px) var(--space-md) var(--space-lg);
    font-size: var(--font-size-lg);
  }

  .select-arrow {
    position: absolute;
    right: var(--space-md);
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: var(--text-secondary);
    transition: transform var(--transition-fast);
  }

  .form-select:focus + .select-arrow {
    color: var(--accent);
  }

  .form-help {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  .form-error {
    font-size: var(--font-size-sm);
    color: var(--form-error-color, #dc3545);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    :root:not(.light-mode) .form-select:focus {
      box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
    }

    :root:not(.light-mode) .form-select--error:focus {
      box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
    }

    :root:not(.light-mode) .form-select--success:focus {
      box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2);
    }

    :root:not(.light-mode) .form-select option {
      background: var(--bg-primary);
      color: var(--text-primary);
    }
  }

  :root.dark-mode .form-select:focus {
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
  }

  :root.dark-mode .form-select--error:focus {
    box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
  }

  :root.dark-mode .form-select--success:focus {
    box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2);
  }

  :root.dark-mode .form-select option {
    background: var(--bg-primary);
    color: var(--text-primary);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .form-select--lg {
      padding: var(--space-sm) calc(var(--space-md) + 24px) var(--space-sm) var(--space-md);
      font-size: var(--font-size-base);
    }
  }
</style>